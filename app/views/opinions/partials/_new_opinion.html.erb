<div>
  <% @opinions.each do |opinion| %>
    <div class="pt-3 pl-2">
      <div>
        <div class="d-flex mb-1">
          <div>
              <% if opinion.author.photo.nil? %>
                 <img src="https://bulma.io/images/placeholders/128x128.png" class="cover-img">
              <% else %>
                <%= image_tag opinion.author.photo.thumb.url, target:"_blank" %>
              <% end %>
          </div>
          <div class="pl-3">
            <div><%= link_to opinion.author.fullname, user_path(opinion.author.id) %></div>
            <div><%= opinion.Text %></div>
          </div>
        </div>    

        <div class="d-flex mt-1">    
          <div class="mr-3">
            <span class="icon-color "><i class="far fa-heart"></i></span>
          </div>
          
         <div class="mr-3">
           <%= link_to edit_opinion_path(opinion) do %>
            <span class="icon-color"><i class="fas fa-pencil-alt "></i></span>
          <% end %>
         </div>
  
         <div>
           <%= link_to opinion_path(opinion), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-default' do %>
            <span class="icon-color"><i class="fas fa-trash-alt"></i></span>   
          <% end %>
         </div>
          
        </div>
      </div>
      
    </div>
  <% end %>
</div>