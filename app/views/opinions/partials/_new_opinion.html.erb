<div>
  <% @opinions.each do |opinion| %>
    <div class="pt-3 pl-2">
      <div>
        <div class="d-flex mb-1">
          <div>
              <% if opinion.author.photo.nil? %>
                 <img src="https://bulma.io/images/placeholders/128x128.png" class="cover-img">
              <% else %>
                <%= image_tag opinion.author.photo.thumb.url, target:"_blank" %>
              <% end %>
          </div>
          <div class="pl-3">
            <div><%= opinion.author.fullname %></div>
            <div><%= opinion.Text %></div>
          </div>
        </div>    

        <div>    
          <span><i class="far fa-heart"></i></span>
          
          <%= link_to edit_opinion_path(opinion) do %>
            <span><i class="fas fa-pencil-alt"></i></span>
          <% end %>
  
          <%= link_to opinion_path(opinion), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-default' do %>
            <span><i class="fas fa-trash-alt"></i></span>   
          <% end %>
          
        </div>
      </div>
      
    </div>
  <% end %>
</div>