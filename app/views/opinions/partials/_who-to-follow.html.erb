<div class="px-1 py-3">

  <h5>Who to Follow</h5>

  <div class="py-2">
   
      <% @users.each do |user| %>
          <% unless user[:photo].nil? %>   
            <div class="d-flex py-2">
                <div><%= image_tag user.photo.thumb.url, class: 'photo' %></div>
                <div class="pl-2 pt-3"><h6><%= link_to user.fullname, user_path(user) %></h6></div>
            </div>
          <% else %>
          <% end %>     
      <% end %>
           
  </div>
</div>