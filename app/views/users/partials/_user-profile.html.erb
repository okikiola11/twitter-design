<div class="px-1 py-3">

  <div class="py-2">
    <div class="d-flex flex-column mb-3">
      <div class="text-center">
      
        <div class="d-flex justify-content-center">
          <div>
            <div class="py-2"><%= image_tag @user.photo.thumb.url ? @user.photo.thumb.url : 'default.jpeg', class:"rounded-circle" %>
            </div>   
          </div>

          <div class="mt-2">
              <%# Follow %><%# Unfollow %>
              <%= follow_unfollow(@user) if !current_user?(@user) %>
          </div>
        </div>

        <div class="d-flex-row ">
          <h6><%= @user.fullname %></h6>
          <h6>@<%= @user.username %></h6><br>
        </div>

      </div>
    </div>

    <div class="pt-4 d-flex justify-content-around border-top">
      <div>
        <div class="text-center"><%= @user.opinions.count %></div>
        <div>Tweets</div>
      </div>
      <div>
        <div class="text-center"><%= @user.followers.count %></div>
        <div>Followers</div>
      </div>
      <div>
        <div class="text-center"><%= @user.following.count %></div>
        <div>Following</div>
      </div>
    </div>

    <div class="mt-5">
      <h6>FOLLOWED BY</h6>

      <div class="mt-3">
        <% @user.followers.each do |f| %>
          <div class="d-flex">
            <div class="rounded-circle"><%= user_avatar @user, size: 40, class:"rounded-circle" %></div>
            <div class="mt-2 ml-3"> <%= f.fullname %> </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>