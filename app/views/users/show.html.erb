<div class="row">
  <div class="col col-lg-3">
    <%= render 'layouts/side_nav' %>
  </div>

  <div class="col side-pad">
    <div class="col-lg-12" style="padding:0;">
      <%= render 'layouts/header' %>
    </div>

    <div class="d-flex">
      <div class="col col-lg-9 opinion-conteiner" style="padding:0;">
        <% unless @user.coverimage.nil? %>
          <div><%= image_tag @user.coverimage.standard.url, class: "cover-img" %></div>
        <% else %>
            <img src="https://via.placeholder.com/150" alt="" class="cover-img">
        <% end %>      
        
        <div class="opinion-partials px-3 py-3">
          <%= render 'users/partials/user-opinions' %>
        </div>         
      </div>

      <div class="col-lg-3 px-1" style="padding:0; ">
        <div class="mb-3">
          <%= render 'users/partials/user-profile' %>
        </div>         
      </div>       
    </div>  
      
  </div>
</div>
