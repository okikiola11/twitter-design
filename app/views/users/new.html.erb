<div class="text-center"> Sign Up </div>

<div class="row justify-content-md-center">
  <div class="col-md-4">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :username, 'Username' %>
      <%= f.text_field :username, class: 'mb-1 form-control' %>

      <%= f.label :fullname, 'Fullname' %>
      <%= f.text_field :fullname, class: 'mb-1 form-control' %>

      <%= f.label :photo, 'My avatar' %>
      <%= f.file_field :photo, class: 'form-control' %>
      <%= f.hidden_field(:photo_cache) %>

      <%= f.label :coverimage, 'Cover image' %>
      <%= f.file_field :coverimage, class: 'form-control' %>

      <%= f.submit 'Create an account', class: 'mt-2 btn btn-primary' %>
      
      <%= hidden_field_tag :direct, params[:direct] %>
    <% end %>
  </div> 
</div>

<div>
  <%= link_to 'Log in', login_path, class: 'mt-2 btn btn-primary' %>
</div>
